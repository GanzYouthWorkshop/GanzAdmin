@using Microsoft.AspNetCore.Http;
@using GanzNet.Authentication;

@namespace GanzAdmin.Authentication.Components

@if (!this.AuthenticationProvider.CheckAuth(this.NeededRolesOR, this.NeededRolesAND))
{
    @ChildContent
}

@code
{
    [Inject]
    protected IAuthProvider AuthenticationProvider { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string NeededRolesOR { get; set; }

    [Parameter]
    public string NeededRolesAND { get; set; }
}