@page "/"

<main class="full dashboard @(this.CurrentUser == null ? "loading" : "")">
    @if (this.CurrentUser != null)
    {
        <h1>Helló, @this.CurrentUser?.Name!</h1>

        <div class="grid">
            <section>
                <h2>Foglalkozás</h2>
                <NavLink href="/notyet" class="button">
                    <i></i>
                    <p>Tananyagtár</p>
                </NavLink>
                <NavLink href="/calendar" class="button">
                    <i></i>
                    <p>Naptár</p>
                </NavLink>

                @if (!this.CurrentUser.Attendances.Exists(a => a.Occasion.Date == DateTime.Today))
                {
                    <NavLink class="button" @onclick="OnLogAttenance">
                        <i></i>
                        <p>Megjöttem!</p>
                    </NavLink>
                }
            </section>

            <section>
                <h2>Adatkezelés</h2>
                <AuthorizedView NeededRolesOR="@Permissions.ListMembers">
                    <NavLink href="/members" class="button">
                        <i></i>
                        <p>Tagok</p>
                    </NavLink>
                </AuthorizedView>
                <AuthorizedView NeededRolesOR="@Permissions.ListLocations">
                    <NavLink href="/locations" class="button">
                        <i></i>
                        <p>Helyek</p>
                    </NavLink>
                </AuthorizedView>
                <AuthorizedView NeededRolesOR="@Permissions.ListLocations">
                    <NavLink href="/categories" class="button">
                        <i></i>
                        <p>Kategóriák</p>
                    </NavLink>
                </AuthorizedView>
            </section>

            <section>
                <h2>Felhőtároló</h2>
                <AuthorizedView NeededRolesOR="@Permissions.AccessOwnFileStorage">
                    <NavLink href="/files/own" class="button">
                        <i></i>
                        <p>Saját fájljaim</p>
                    </NavLink>
                </AuthorizedView>
                <AuthorizedView NeededRolesOR="@Permissions.AccessSharedFileStorage">
                    <NavLink href="/files/shared" class="button">
                        <i></i>
                        <p>Közös fájlok</p>
                    </NavLink>
                </AuthorizedView>
            </section>

            <section>
                <h2>Fejlesztői eszközök</h2>
                <NavLink href="/dev-ideas" class="button">
                    <i></i>
                    <p>Fejlesztési javaslatok</p>
                </NavLink>

                <AuthorizedView NeededRolesOR="@Permissions.Overlord">
                    <NavLink href="/test-auth" class="button">
                        <i></i>
                        <p>Tesztek</p>
                    </NavLink>
                </AuthorizedView>
            </section>
        </div>
    }
</main>

@code
{
    [Inject]
    private IJSRuntime JS { get; set; }

    [Inject]
    public GanzAuthProvider AuthProvider { get; set; }

    public Member CurrentUser { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Run(() =>
        {
            this.CurrentUser = GanzAdminDbEngine.Instance.Members.FindById(this.AuthProvider.CurrentSession.MemberId);
        });
    }

    private void OnLogAttenance()
    {
        GanzAdminDbFunctions.LogAttendance(this.CurrentUser, DateTime.Today);
        this.JS.InvokeVoidAsync("alertify.success", "Jelenléti ív frissítve!");
    }
}