@page "/"
@namespace GanzAdmin.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GanzAdmin</title>

    <link rel="icon" type="image/png" href="img/favicon.png" />

    <base href="~/" />
    <link rel='stylesheet' href='~/style/style.css'>
    <link rel="stylesheet" href="~/style/alertify.core.css" />
    <link rel="stylesheet" href="~/style/alertify.bootstrap.css" />
    <link rel="stylesheet" href="~/style/controls.css" />
    <link rel="stylesheet" href="~/style/highlightjs.css" />
    <link rel="stylesheet" href='~/js/codemirror/codemirror.css' />
    <link rel="stylesheet" href='~/js/codemirror/lint.css' />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Sajnos hiba történt =( Lehet, hogy újra kell töltened az oldalt!
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Frissítés</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src='~/js/jquery.js'></script>
    <script src='~/js/jquery-ui.js'></script>
    <script src='~/js/alertify.min.js'></script>
    <script src='~/js/jslinq.js'></script>
    <script src='~/js/datagrid.js'></script>
    <script src='~/js/editor.bundle.js'></script>
    <script src='~/js/hls.js'></script>
    <script src='~/js/highlight.pack.js'></script>
    <script src='~/js/mjpeg.js'></script>

    @*TODO ezeket helyivé tenni*@
    <script src="https://unpkg.com/jshint@2.9.6/dist/jshint.js"></script>
    <script src="https://unpkg.com/jsonlint@1.6.3/web/jsonlint.js"></script>
    <script src="https://unpkg.com/csslint@1.0.5/dist/csslint.js"></script>
    <script src='~/js/codemirror/codemirror.js'></script>
    <script src='~/js/codemirror/lint.js'></script>
    <script src='~/js/codemirror/css.js'></script>
    <script src='~/js/codemirror/css-lint.js'></script>
    <script src='~/js/codemirror/javascript.js'></script>
    <script src='~/js/codemirror/javascript-lint.js'></script>
    <script src='~/js/codemirror/xml.js'></script>
    <script src='~/js/codemirror/htmlmixed.js'></script>
    <script src='~/js/codemirror/html-lint.js'></script>

    <script src='~/js/common.js'></script>
    <script src='~/js/blazor.js'></script>

    <!-- SignalR client -->
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
