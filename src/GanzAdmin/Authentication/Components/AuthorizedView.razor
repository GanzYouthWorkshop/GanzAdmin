@using Microsoft.AspNetCore.Http;
@using GanzAdmin.Authentication;
@using GanzAdmin.Database;
@using GanzAdmin.Database.Models;

@if (this.AuthenticationProvider.CheckAuth(this.NeededRolesOR, this.NeededRolesAND))
{
    @ChildContent
}

@code
{
    [Inject]
    protected GanzAuthProvider AuthenticationProvider { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string NeededRolesOR { get; set; }

    [Parameter]
    public string NeededRolesAND { get; set; }
}