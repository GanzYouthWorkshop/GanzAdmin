@using Microsoft.AspNetCore.Http;
@using GanzAdmin.Authentication;
@using GanzAdmin.Database;
@using GanzAdmin.Database.Models;

@namespace GanzAdmin.Shared

@inject NavigationManager NavMan
<header>
    <h1>
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            GanzAdmin
        </NavLink>
    </h1>
</header>

<main class="full dashboard">
    <EditForm method="post" EditContext="new EditContext(true)" OnValidSubmit="HandleValidSubmit">
        <input type="text" name="user" @bind-value="this.User" />
        <input type="password" name="pass" @bind-value="this.Pass" />

        <button type="submit">Submit</button>
    </EditForm>
</main>


@code
{
    [Inject]
    protected IHttpContextAccessor Context { get; set; }

    private string User { get; set; }
    private string Pass { get; set; }

    private void HandleValidSubmit()
    {
        this.NavMan.NavigateTo("/");
    }

    protected override async Task OnInitializedAsync()
    {
    }
}